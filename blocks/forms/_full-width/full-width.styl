// Info
.forms-info
  overflow hidden

.forms-info__icon
  float left
  display block
  width 5%
  padding 0px 10px 0 6px
  box-sizing border-box

.forms-info__text
  float left
  width 95%
  margin 0
  font-size 14px
  line-height 17px
  color #333333


// Agree
.forms-agree
  overflow hidden

.forms-agree__checkbox
  width 5%
  float left
  display block
  width 5%
  padding 0px 10px 0 6px
  box-sizing border-box

.forms-agree__text
  float left
  width 95%
  margin 0
  font-size 14px
  line-height 17px
  color #333333
