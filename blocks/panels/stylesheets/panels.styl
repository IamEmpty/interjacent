.panel
  background #E7F1FA
  padding 25px 23px 25px

.panel_with-border
  border 1px solid #9BC7EA
  padding 23px 23px 21px
  margin 26px 0 21px

.panel__content
  margin 0
  font-size 14px

.panel__icon
  float left
  margin 1px 6px 0 0

.panel__text
  font-size 14px
  color #111111
  line-height 16px

.panel__date
  font-size 12px
  color #777777
  margin 8px 0 0

.panel__text_muted
  color #888888

.panel__url
  font-size 14px
  text-decoration underline
  color #2685D1

.panel__url_muted
  color #888888

.panel__url_dotted
  text-decoration none
  border-bottom 1px dotted #2685D1

