.breadcrumbs
  padding: 0
  font-size: 0
  margin: 15px 0 22px


.breadcrumbs__item
  list-style: none
  display: inline-block

  &:after
    margin: 0 7px
    content: '/'
    display: inline-block
    color: #888888
    font-size: 12px
    font-weight: 400

  &:last-child
    &:after
      display: none
