.aside-icons-menu
  padding 0
  margin 0

.aside-icons-menu_second-level
  padding 15px
  padding 0 0 0 22px

.aside-icons-menu__item
  list-style none
  overflow hidden
  margin 0 0 3px 0
  &:last-child
    margin 0

.aside-icons-menu__icon
  padding 3px 10px 0 0
  width 10%
  float left
  box-sizing border-box

.aside-icons-menu__link
  link_default()
  font-size 13px
  width 90%
  float left
  display block
  box-sizing border-box
  margin 2px 0 5px 0

.aside-icons-menu__link_disabled
  link_disabled()

.aside-icons-menu__text
  color #333333
  font-size 13px
  margin 1px 0 5px
