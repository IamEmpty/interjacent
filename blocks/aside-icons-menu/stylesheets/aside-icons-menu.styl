.aside-icons-menu
  padding 0
  margin 0
  overflow hidden

.aside-icons-menu_no-icon
  position relative
  &:after
    content ''
    border-left 1px solid #F1F1F1
    width 100%
    height 100%
    margin 0
    left 0
    top -8px
    position absolute
    z-index -1

.aside-icons-menu_second-level
  padding 15px
  padding 0 0 0 22px
  overflow hidden

.aside-icons-menu__item
  list-style none
  overflow hidden
  margin 0 0 3px 0
  &:last-child
    margin 0

.aside-icons-menu__icon
  padding 3px 10px 0 0
  width 10%
  float left
  box-sizing border-box

.aside-icons-menu__link
  link_default()
  font-size 13px
  width 90%
  float left
  display block
  box-sizing border-box
  margin 2px 0 5px 0
  &:last-child
    margin 2px 0 0 0

.aside-icons-menu__link_no-icon
  &:before
    arial()
    font-size 8px
    content '...'
    color #C8C8C8
    position absolute
    margin 0
    left 0

.aside-icons-menu__link_disabled
  link_disabled()

.aside-icons-menu__text
  color #333333
  font-size 13px
  margin 1px 0 5px
