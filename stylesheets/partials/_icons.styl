sprite($sprite) {
  background url(path-to-sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name}:after {
      sprite($sprite)
    }
  }
}


